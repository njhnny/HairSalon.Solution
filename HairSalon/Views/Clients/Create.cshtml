@{
  Layout = "_Layout";
}

@model HairSalon.Models.Client

<h3>Add a New Client</h3>
<hr>

@using (Html.BeginForm())
{
  @Html.LabelFor(model => model.ClientName)
  @Html.TextBoxFor(model => model.ClientName, new { @class = "form-control", @required = "required" })

  @Html.LabelFor(model => model.StylistId)
  @Html.DropDownList("StylistId", null, new { @class = "form-control" })

  <input type="submit" value="Add New Client"/>
}