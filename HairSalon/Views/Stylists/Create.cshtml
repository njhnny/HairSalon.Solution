@{
  Layout = "_Layout";
}

@model HairSalon.Models.Stylist

<h2>Add a stylist</h2>

@using (Html.BeginForm())
{
  @Html.LabelFor(model => model.Name)
  @Html.TextBoxFor(model => model.Name, new { @class = "form-control", @required = "required" })
  @Html.LabelFor(model => model.Details, new { @class = "form-control", @required = "required" })
  <br>
  @Html.TextBoxFor(model => model.Details)
  <input type="submit" value="Add Stylist"/>
}
<br>
<p>@Html.ActionLink("See all stylists", "Index")</p>
<p>@Html.ActionLink("Back to Home", "Index", "Home")</p>